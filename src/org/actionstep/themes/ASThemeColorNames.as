/**
 * Reserved color names in a theme.
 * 
 * @author Scott Hyndman
 */
class org.actionstep.themes.ASThemeColorNames {
  
	/**
	 * The default color to use for text controls, buttons, lists, etc
	 */
	public static var ASSystemFontColor:String = "systemFontColor";
  
	/**
	 * Color of disabled text.
	 */
	public static var ASDisabledText:String = "disabledTextColor";
	
	/**
	 * Background of NSAlert
	 */
	public static var ASAlertBackground:String = "alertBackgroundColor";
	
	/**
	 * The NSTable's alternating row color.
	 */
	public static var ASAlternatingRowColor:String = "alternatingRowColor";
	
	/**
	 * The menu and status bar's background color.
	 */
	public static var ASMenuBackground:String = "menuBackgroundColor";
	
	/**
	 * The border color for the menu and status bar.
	 */
	public static var ASMenuBorder:String = "menuBorderColor";
	
	/**
	 * Background color for a selected menu item.
	 */
	public static var ASMenuItemSelectedBackground:String = "menuItemSelectedBackgroundColor";
	
	/**
	 * Text color for a selected menu item.
	 */
	public static var ASMenuItemSelectedText:String = "menuItemSelectedTextColor";
	
	/**
	 * Text color for a menu item.
	 */
	public static var ASMenuItemText:String = "menuItemTextColor";
	
	/**
	 * Text color for disabled menu item text.
	 */
	public static var ASMenuItemDisabledText:String = "menuItemDisabledTextColor";
	
	/**
	 * The main color of the progress bar.
	 */
	public static var ASProgressBar:String = "progressBarColor";
	
	/**
	 * The background color of the progress bar.
	 */
	public static var ASProgressBarBackground:String = "progressBarBackgroundColor";
	
	/**
	 * The color of the slider track.
	 */
	public static var ASSliderBarColor:String = "sliderBarColor";
	
	/**
	 * The default color for tab view items.
	 */
	public static var ASTabViewItem:String = "tabViewItemColor";
	
	/**
	 * The color of a browser cell's text when it is not selected. If no
	 * value is provided, black is used.
	 */
	public static var ASBrowserText:String = "browserText";
	
	/**
	 * The color of a browser cell's text when it is selected and is marked
	 * as first responder.
	 */
	public static var ASBrowserFirstResponderSelectionText:String = "browserFirstResponderSelectionText";
	
	/**
	 * The color of a browser cell's background when it is selected and is 
	 * marked as first responder.
	 */
	public static var ASBrowserFirstResponderSelectionBackground:String = "browserFirstResponderSelectionBackground";
	
	/**
	 * <p>The color of browser cell's text when it is selected, but not first
	 * responder.</p>
	 * 
	 * <p>Returns {@link #ASBrowserFirstResponderSelectionText} if 
	 * <code>null</code>.</p>
	 */
	public static var ASBrowserSelectionText:String = "browserSelectionText";
	
	/**
	 * <p>The color of browser cell's background when it is selected, but not 
	 * first responder.</p>
	 * 
	 * <p>Returns {@link #ASBrowserFirstResponderSelectionBackground} if
	 * <code>null</code>.</p> 
	 */
	public static var ASBrowserSelectionBackground:String = "browserSelectionBackground";
	
	/**
	 * <p>The background color for a browser's matrices.</p>
	 * 
	 * <p><code>null</code> if none</p>
	 */
	public static var ASBrowserMatrixBackground:String = "browserMatrixBackground";
	
	/**
	 * The color of a tool tip's border.
	 */
	public static var ASToolTipBorder:String = "toolTipBorderColor";
	
	/**
	 * The color of a tool tip's background.
	 */
	public static var ASToolTipBackground:String = "toolTipBackgroundColor";
	
	/**
	 * The background color of a switch button (checkbox)
	 */
	public static var ASSwitchButtonBackground:String = "switchButtonBackgroundColor";

	/**
	 * The background color of a checked switch button (checkbox)
	 */	
	public static var ASHighlightedSwitchButtonBackground:String = "highlightedSwitchButtonBackgroundColor";
	
	/**
	 * The background color of a radio button
	 */
	public static var ASRadioButtonBackground:String = "radioButtonBackgroundColor";

	/**
	 * The background color of a highlighted radio button
	 */	
	public static var ASHighlightedRadioButtonBackground:String = "highlightedRadioButtonBackgroundColor";
	
	/**
	 * The background of a table header cell
	 */
	public static var ASTableHeaderBackground:String = "tableHeaderBackgroundColor";

	/**
	 * The background of a highlighted table header cell
	 */
	public static var ASHighlightedTableHeaderBackground:String = "highlightedTableHeaderBackgroundColor";
	
	/**
	 * The background of a selected table header cell
	 */
	public static var ASSelectedTableHeaderBackground:String = "selectedTableHeaderBackgroundColor";
	
	/**
	 * The background of a selected and highlighted table header cell
	 */
	public static var ASHighlightedSelectedTableHeaderBackground:String = "highlightedSelectedTableHeaderBackgroundColor";
	
	/**
	 * The background of a selected table cell when the table is not first
	 * responder.
	 */
	public static var ASTableCellSelectionBackground:String = "tableCellSelectionBackgroundColor";	

	/**
	 * The text color of a selected table cell when the table is not first
	 * responder.
	 */		
	public static var ASTableCellSelectionText:String = "tableCellSelectionTextColor";
		
	/**
	 * The background of a selected table cell when the table is first
	 * responder.
	 */
	public static var ASTableCellFirstResponderSelectionBackground:String = "tableCellFirstResponderSelectionBackgroundColor";

	/**
	 * The text color of a selected table cell when the table is first
	 * responder.
	 */	
	public static var ASTableCellFirstResponderSelectionText:String = "tableCellFirstResponderSelectionTextColor";
	
	/**
	 * The baseline of the toolbar.
	 */
	public static var ASToolbarBaseline:String = "toolbarBaselineColor";
	
	/**
	 * The background of the toolbar.
	 */
	public static var ASToolbarBackground:String = "toolbarBackgroundColor";
	
	/**
	 * The background of a selected toolbar item.
	 */
	public static var ASSelectedToolbarItemBackground:String = "selectedToolbarItemBackgroundColor";
	
	/**
	 * The border of a selected toolbar item.
	 */
	public static var ASSelectedToolbarItemBorder:String = "selectedToolbarItemBorderColor";
}